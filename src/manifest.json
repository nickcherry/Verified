{
  "name": "Verified",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Verify content creators.",
  "homepage_url": "http://nick-cherry.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Verified",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background/index.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["content/style.css"],
      "js": ["content/index.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}