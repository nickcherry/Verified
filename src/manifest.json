{
  "name": "Verified",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Verify content creators.",
  "homepage_url": "http://nick-cherry.com",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}