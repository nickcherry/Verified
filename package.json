{
  "name": "Verified",
  "version": "0.0.1",
  "description": "Verify content creators.",
  "author": "Nick Cherry",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./builds",
    "compile": "./node_modules/truffle/.bin/truffle compile --contracts_build_directory=builds/contracts",
    "develop": "npm-run-all --parallel compile serve-ethereum webpack-chrome-extension-development",
    "migrate": "./node_modules/truffle/.bin/truffle migrate --contracts_build_directory=builds/contracts --network development",
    "migrate-production": "./node_modules/truffle/.bin/truffle migrate --contracts_build_directory=builds/contracts --network live",
    "serve-ethereum": "./node_modules/ganache-cli/cli.js",
    "test": "./node_modules/truffle/.bin/truffle test --contracts_build_directory=builds/contracts",
    "webpack-chrome-extension-development": "node ./node_modules/webpack/bin/webpack --config ./webpack/chrome_extension.development.config.js --mode development --progress --hide-modules --watch"
  },
  "dependencies": {
    "ethers": "^4.0.20",
    "ganache-cli": "^6.2.5",
    "truffle": "^5.0.1",
    "truffle-hdwallet-provider": "^1.0.2",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}
